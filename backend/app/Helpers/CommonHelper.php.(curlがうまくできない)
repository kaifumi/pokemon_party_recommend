      curl_setopt($conn, CURLOPT_HTTPHEADER, $headers);
      // curl_setopt($conn, CURLOPT_HTTPHEADER, array('Accept: application/json'));
  
      curl_setopt($conn, CURLOPT_RETURNTRANSFER, TRUE);
      curl_setopt($conn, CURLOPT_FILE, $fp);
      dd($conn);
